    },
    {
      "parameters": {
        "jsCode": "return items.map(item => {\n  const v = item.json;\n\n  // fallback safety\n  const views = v.view_count || 0;\n  const duration = v.duration || 60;\n\n  // Shorts bias: short + views\n  const score = views / duration;\n\n  return {\n    json: {\n      ...v,\n      score\n    }\n  };\n});\n"
      },
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
